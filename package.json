{
  "name": "oauth-client",
  "version": "1.0.0",
  "description": "OAuth 2.0 test client for testing and verifying Access Token retrieval",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "oauth-client": "dist/cli/index.js"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "build:tsc": "tsc",
    "build:watch": "node esbuild.config.js --watch",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean",
    "pretest": "npm run lint && npm run typecheck",
    "quality-gate": "pnpm run quality-gate:full",
    "quality-gate:full": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm run test && pnpm run build",
    "quality-gate:quick": "pnpm run typecheck && pnpm run lint"
  },
  "keywords": [
    "oauth",
    "oauth2",
    "authentication",
    "testing",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.1.2",
    "@jest/types": "^30.0.5",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "esbuild": "^0.25.10",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "inquirer": "^12.9.6",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.17.0"
  }
}
